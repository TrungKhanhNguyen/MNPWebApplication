@model System.Data.DataTable
@using System.Data;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MNP.cshtml";
}

<div class="contenttitle2">
    <h3>MNC Information</h3>
</div>
<br />
<a href="/MNC/Create" class="btn btn_orange btn_flag"><span>Create New</span></a>

<table cellpadding="0" cellspacing="0" border="0" class="stdtable" style="margin-top : 20px;">
    <colgroup>
        <col class="con0" />
        <col class="con1" />
        <col class="con0" />
        <col class="con1" />
        <col class="con0" />
        <col class="con1" />
        <col class="con0" />
    </colgroup>
    <thead>
        <tr>
            <th class="head0">MCC</th>
            <th class="head1">MNC</th>
            <th class="head0">Brand</th>
            <th class="head1">Operator</th>
            <th class="head0">Status</th>
            <th class="head1">Bands</th>
            <th class="head0"></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th class="head0">MCC</th>
            <th class="head1">MNC</th>
            <th class="head0">Brand</th>
            <th class="head1">Operator</th>
            <th class="head0">Status</th>
            <th class="head1">Bands</th>
            <th class="head0"></th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (DataRow row in Model.Rows)
            {
            <tr class="gradeA">
                @foreach (DataColumn col in Model.Columns)
                {
                    if (col.ColumnName == "Id")
                    {
                        <td>
                            <a href="/MNC/Edit/@row[col.ColumnName]" class="btn btn_link" ><span>Edit</span></a>
                            <a href="#" class="btn btn_black btn_trash confirmbutton" data-id="@row[col.ColumnName]"><span>Delete</span></a>
                        </td>
                    }
                    else
                    {
                        <td>@row[col.ColumnName]</td>
                    }

                }
            </tr>
        }
    </tbody>
</table>

